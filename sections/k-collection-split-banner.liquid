{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  #shopify-section-{{ section.id }} {
    --grid-desktop-horizontal-spacing: 0px;
    --grid-desktop-vertical-spacing: 0px;
    --grid-mobile-horizontal-spacing: 0px;
    --grid-mobile-vertical-spacing: 0px;
  }

  .split-image-wrapper {
    position: relative;
    isolation: isolate;
    height: 100%;
  }
  .split-image-wrapper a {
    display: block;
  }
  .split-image-wrapper a:after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  .heading-block h3 {
    margin: 0;
  }
  .split-content--inner > * {
    width: 100%;
  }

  .text-block-split {
    max-width: 57rem;
    margin: auto;
    font-weight: 500;
    font-size: 1.8rem;
    line-height: 1.2em;
  }
  .bottom-block {
    width: 100%;
    padding: 0 1.5rem;
  }
  .heading-block .text-block-split {
    margin-top: 1.5rem;
  }
  .split-content {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    display: block;
    padding: 2.5rem 1.5rem;
  }
  .card-overlay-media {
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
  }
  .split-featured-inner {
    max-width: var(--width);
    margin: auto;
    width: 100%;
  }
  .split-featured-image {
    display: flex;
  }
  .split-content--inner {
    height: 100%;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto 1fr auto;
    gap: 2rem;
  }

  {% for block in section.blocks %}
    {% if block.settings.text_color.alpha != 0.0  and block.settings.text_color != blank %}
      #Block-{{ block.id }} * {
        color: {{ block.settings.text_color }};
      }
    {% endif %}
  {% endfor %}

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .split-content {
      padding: 5.5rem 2.5rem;
      min-height: 60rem;
    }
    .split-content--inner {
      grid-template-rows: auto 1fr minmax(4rem, auto);
    }
  }

  @media (max-width: 749px) {
    .heading-block {
      top: 0;
    }
    .text-block-split {
      font-size: 1.4rem;
    }
    .heading-block .text-block-split {
      margin-top: 1rem;
    }
    .heading-block h3 {
      font-size: calc(var(--font-heading-scale) * 2.6rem);
      max-width: 33rem;
      margin: auto;
    }
    .split-featured-inner {
      max-width: var(--mobile-width);
    }
  }
{%- endstyle -%}


<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding">
    <div class="grid grid--1-col-tablet-down grid-2-col-desktop">
        {% for block in section.blocks %}
            <div class="grid__item">
              <div class="split-image-wrapper" id="Block-{{ block.id }}">
                {%- if block.settings.bg_image != blank -%}
                    <div
                      class="card-overlay-media media media--transparent"
                    >
                      {%- liquid
                        assign number_of_columns = 2
                        assign number_of_columns_mobile = 2
                        assign grid_space_desktop = number_of_columns | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                        assign grid_space_tablet = number_of_columns_mobile | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                        assign grid_space_mobile = number_of_columns_mobile | minus: 1 | times: settings.spacing_grid_horizontal | divided_by: 2 | plus: 30 | append: 'px'
                        assign image_width = 1
                      -%}
                      {% capture sizes %}
                        (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width }}px - {{ grid_space_desktop }}) * {{ image_width }} /  {{ number_of_columns }}),
                        (min-width: 990px) calc((100vw - {{ grid_space_desktop }}) * {{ image_width }} / {{ number_of_columns }}),
                        (min-width: 750px) calc((100vw - {{ grid_space_tablet }}) * {{ image_width }} / {{ number_of_columns_mobile }}),
                        calc((100vw - {{ grid_space_mobile }}) * {{ image_width }} / {{ number_of_columns_mobile }})
                      {% endcapture %}
                      {{
                        block.settings.bg_image
                        | image_url: width: 3200
                        | image_tag:
                          loading: 'lazy',
                          widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
                          sizes: sizes
                      }}
                    </div>
                {%- endif -%}

                <div class="split-content">
                  <div class="split-content--inner">
                    {% if block.settings.heading != blank or block.settings.top_text != blank %}
                      <div class="heading-block center">
                        {% if block.settings.heading != blank %}
                          <h3 class="inline-richtext {{ block.settings.heading_size }}">
                            {% if block.settings.link != blank %}
                              <a href="{{ block.settings.link }}" class="full-unstyled-link">
                            {% endif %}
                              {{ block.settings.heading }}
                            {% if block.settings.link != blank %}
                              </a>
                            {% endif %}
                          </h3>
                        {% endif %}

                        {% if block.settings.top_text != blank %}
                          <div class="rte text-block-split top-text">
                            {{ block.settings.top_text }}
                          </div>
                        {% endif %}
                      </div>
                    {% endif %}
                    {% if block.settings.featured_image != blank %}
                      <div class="split-featured-image" style="--width: {{ block.settings.image_width }}rem; --mobile-width:{{ block.settings.mobile_image_width }}rem;">
                        <div class="split-featured-inner">
                          <div
                              class="media media--transparent"
                              style="padding-bottom: {{ 1 | divided_by: block.settings.featured_image.aspect_ratio | times: 100 }}%;"
                            >
                              {%- liquid
                                assign number_of_columns = 2
                                assign number_of_columns_mobile = 1
                                assign grid_space_desktop = number_of_columns | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                                assign grid_space_tablet = number_of_columns_mobile | minus: 1 | times: settings.spacing_grid_horizontal | plus: 100 | append: 'px'
                                assign grid_space_mobile = number_of_columns_mobile | minus: 1 | times: settings.spacing_grid_horizontal | divided_by: 2 | plus: 30 | append: 'px'
                                assign image_width = 1
                              -%}
                              {% capture sizes %}
                                (min-width: {{ settings.page_width }}px) calc(({{ settings.page_width }}px - {{ grid_space_desktop }}) * {{ image_width }} /  {{ number_of_columns }}),
                                (min-width: 990px) calc((100vw - {{ grid_space_desktop }}) * {{ image_width }} / {{ number_of_columns }}),
                                (min-width: 750px) calc((100vw - {{ grid_space_tablet }}) * {{ image_width }} / {{ number_of_columns_mobile }}),
                                calc((100vw - {{ grid_space_mobile }}) * {{ image_width }} / {{ number_of_columns_mobile }})
                              {% endcapture %}
                              {{
                                block.settings.featured_image
                                | image_url: width: 3200
                                | image_tag:
                                  loading: 'lazy',
                                  widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500, 1750, 2000, 2250, 2500, 2750, 3000, 3200',
                                  sizes: sizes
                              }}
                          </div>
                        </div>
                      </div>
                    {%- endif -%}

                    {% if block.settings.bottom_text != blank %}
                      <div class="bottom-block center">
                        <div class="rte text-block-split bottom-text">
                          {{ block.settings.bottom_text }}
                        </div>
                        {% if block.settings.bottom_code != blank %}
                          <div class="center code-below">
                            {{ block.settings.bottom_code }}
                          </div>
                        {% endif %}
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
        {% endfor %}
    </div>
  </div>
</div>


